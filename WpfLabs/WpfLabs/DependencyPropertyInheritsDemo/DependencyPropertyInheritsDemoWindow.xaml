<Window x:Class="WpfLabs.DependencyPropertyInheritsDemo.DependencyPropertyInheritsDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfLabs.DependencyPropertyInheritsDemo"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="DependencyPropertyInheritsDemoWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <local:UserTopControl Target="{Binding Target}">
            <local:UserMiddleControl>
                <local:UserBottomControl />
            </local:UserMiddleControl>
        </local:UserTopControl>
    </Grid>
</Window>
